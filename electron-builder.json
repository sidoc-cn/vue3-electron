{
    "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
    "appId": "77Q6F9P39T",
    "asar": true,
    "productName": "Vue3-Electron模板",
    "copyright": "Copyright ©2020-2099 ${author}",
    "directories": {
        "output": "release/${version}"
    },
    "files": ["dist", "dist-electron"],

    "mac": {
        "target": {
            "target": "dmg",
            "arch": ["x64", "arm64"]
        },
        "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}",
        "icon": "statics/logo/icon_512x512.png",
        "darkModeSupport": true
    },

    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": ["x64", "ia32", "arm64"]
            }
        ],
        "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}",
        "icon": "statics/logo/icon_512x512.png"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "deleteAppDataOnUninstall": true,
        "installerIcon": "statics/logo/icon_512x512.png",
        "uninstallerIcon": "statics/logo/icon_512x512.png",
        "installerHeaderIcon": "statics/logo/icon_512x512.png",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
    },

    "linux": {
        "target": [
            {
                "target": "rpm",
                "arch": ["x64", "armv7l", "arm64"]
            },
            {
                "target": "deb",
                "arch": ["x64", "armv7l", "arm64"]
            }
        ],
        "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}",
        "icon": "statics/logo/icon_512x512.png"
    }
}
