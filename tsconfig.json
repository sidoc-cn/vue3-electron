{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "declaration": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "noEmit": true,
        "baseUrl": "",
        "paths": {
            "@/*": ["src/*"]
        },
        "types": ["vite/client", "node"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "components.d.ts",
        "auto-imports.d.ts",
        "./.eslintrc-auto-import.json"
    ],
    // TS编译性能优化：指定要从编译中排除的文件列表.
    "exclude": ["**/node_modules", "**/public", "**/dist", "**/env", "**/.vscode"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
